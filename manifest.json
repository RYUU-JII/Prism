{
  "manifest_version": 3,
  "name": "Prism",
  "description": "Paste HTML. Open the sidebar. See it live.",
  "version": "0.1.2",
  "permissions": ["sidePanel", "storage", "activeTab", "downloads"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://v0.dev/*",
    "https://bolt.new/*",
    "https://lovable.dev/*",
    "https://grok.com/*",
    "https://*.deepseek.com/*",
    "https://*.z.ai/*",
    "https://*.meta.ai/*",
    "https://www.perplexity.ai/*",
    "https://poe.com/*",
    "https://www.phind.com/*",
    "https://chat.mistral.ai/*",
    "https://chat.qwenlm.ai/*",
    "https://*.unsplash.com/*",
    "https://*.githubusercontent.com/*",
    "https://picsum.photos/*",
    "https://placehold.co/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://v0.dev/*",
        "https://bolt.new/*",
        "https://lovable.dev/*",
        "https://grok.com/*",
        "https://*.deepseek.com/*",
        "https://*.z.ai/*",
        "https://*.meta.ai/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://www.phind.com/*",
        "https://chat.mistral.ai/*",
        "https://chat.qwenlm.ai/*"
      ],
      "js": ["content/spy.js"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://v0.dev/*",
        "https://bolt.new/*",
        "https://lovable.dev/*",
        "https://grok.com/*",
        "https://*.deepseek.com/*",
        "https://*.z.ai/*",
        "https://*.meta.ai/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://www.phind.com/*",
        "https://chat.mistral.ai/*",
        "https://chat.qwenlm.ai/*"
      ],
      "js": ["content/prism-orb.js"],
      "css": ["content/prism-orb.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": { "default_path": "sidepanel/index.html" },
  "sandbox": {
    "pages": ["sidepanel/sandbox.html"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
