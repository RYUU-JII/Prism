{
  "manifest_version": 3,
  "name": "Prism",
  "description": "Paste HTML. Open the sidebar. See it live.",
  "version": "0.1.0",
  "permissions": ["sidePanel", "storage", "activeTab", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/spy.js"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/prism-orb.js"],
      "css": ["content/prism-orb.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": { "default_path": "sidepanel/index.html" },
  "sandbox": {
    "pages": ["sidepanel/sandbox.html"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
